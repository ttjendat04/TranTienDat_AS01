<Window x:Class="TranTienDatWPF.RoleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranTienDatWPF"
        mc:Ignorable="d"
        Title="Choose your Role" Height="200" Width="300"
         WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" >
        <TextBlock Text="Chọn vai trò đăng nhập:" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
        <Button Content="Khách hàng" Width="150" Margin="0,5" Click="Customer_Click"/>
        <Button Content="Nhân viên / Admin" Width="150" Margin="0,5" Click="Employee_Click"/>
    </StackPanel>
</Window>
